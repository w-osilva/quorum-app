<div class="header">
  <h1>Votes</h1>
</div>

<div class="content">
  <table class="pure-table-striped">
    <thead>
      <th>id</th>
      <th>Bill</th>
      <th>Actions</th>
    </thead>

    <tbody>
    <% @votes.each do |vote| %>
      <tr>
        <td><%= vote.id %></td>
        <td><%= vote.bill&.title %></td>
        <td><%= link_to 'Show', vote, class: 'pure-button' %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
